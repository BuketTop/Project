@model List<Project.Model.Entity.Order>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Order List</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              Order List
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Date</th>
                            <th>Order Holder</th>
                            <th>Phone</th>
                            <th>Mail</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Project.Model.Entity.Order order in Model)
                        {
                            <tr>
                                <td>@order.OrderNo</td>
                                <td>@order.OrderDate</td>
                                <td>@(order.Name + " "+ order.Surname)</td>
                                <td>@order.PhoneNumber</td>
                                <td>@order.Mail</td>
                                <td>@order.OrderTotal</td>
                                <td>@order.OrderStatus.Name</td>
                                <td><a href="/Order/OrderDetail/@order.Id" class="btn btn-primary">Sipariş Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>