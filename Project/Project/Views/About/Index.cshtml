@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>


    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">

    <link rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="images/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="images/favicon/favicon-16x16.png" sizes="16x16">
    <style>
        .row {
            margin-right: -15px;
            margin-left: -15px;
        }

        .align-items-center {
            align-items: center !important;
        }

        .row {
            --bs-gutter-x: 1.5rem;
            --bs-gutter-y: 0;
            display: flex;
            flex-wrap: wrap;
        }
    </style>
</head>
<body>

    <div class="boxed_wrapper">

        <header class="top-bar">
        </header>

        <div class="inner-banner has-base-color-overlay text-center" style=" background-image: url('../../content/site/images/background/banner.jpg'); ">
            <div class="container">
                <div class="box">
                    <h3>ABOUT US</h3>
                </div>
            </div>
        </div>

        <div class="single-projects" style=" padding: 200px 0px;">
            <div class="container">
                
                <div class="row align-items-center">
                    <div class="col-12 col-lg-5 col-md-6 text-center md-margin-30px-bottom wow animate__fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">
                        <img src="~/Content/Site/images/slider/about.png" alt="" class="border-radius-6 w-100" data-no-retina="" style="animation-name: fadeInLeft; max-width:450px">
                    </div>
                    <div class="col-12 col-lg-7 col-md-6 text-center text-md-start padding-eight-lr lg-padding-six-lr md-padding-15px-lr wow animate__fadeInRight" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInRight;">

                        <h3 class="alt-font text-extra-dark-gray mb-3">“Journey to the World of Printing”</h3> <br />
                        <p>
                            As Alis Printery, although we were established a short time ago, we are the solution partner of more than three thousand companies operating in various sectors in Izmir, with 51 years of experience of our founder Avni Alançay. We have increased our product range in order to meet all the printing needs of our customers in this way, which was started for the printing of official printed documents (Invoice, Waybill, etc.). We have an innovative structure in line with the developing technology and customer demands, and we continue to renew ourselves without sacrificing quality.
                        </p>

                    </div>
                </div> <!-- buraya kadar-->


            </div>
        </div>
    </div>

    <!-- Scroll Top Button -->
    <button class="scroll-top tran3s color2_bg">
        <span class="fa fa-angle-up"></span>
    </button>
    <!-- pre loader  -->
    <div class="preloader"></div>




</body>
</html>